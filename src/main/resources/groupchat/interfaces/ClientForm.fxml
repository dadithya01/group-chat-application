<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="700.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.groupchat.controllers.ClientController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="775.0" prefWidth="675.0" spacing="55.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="372.0" spacing="10.0">
                    <children>
                        <VBox prefHeight="50.0" prefWidth="678.0" spacing="10.0">
                            <children>
                                <Label text="Group Chat Client">
                                    <font>
                                        <Font name="System Bold" size="35.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="30.0">
                                    <children>
                                        <TextField fx:id="usernameField" prefHeight="24.0" prefWidth="450.0" promptText="Enter your username" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 3; -fx-border-style: dashed; -fx-border-radius: 30px;">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font></TextField>
                              <HBox alignment="CENTER" prefHeight="29.0" prefWidth="350.0" spacing="20.0">
                                 <children>
                                              <Button fx:id="connectBtn" onAction="#connectToServer" prefHeight="29.0" prefWidth="125.0" style="-fx-background-color: black; -fx-background-radius: 30px;" text="Connect" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Button>
                                              <Button fx:id="disconnectBtn" onAction="#disconnectFromServer" prefHeight="29.0" prefWidth="116.0" style="-fx-background-color: white; -fx-background-radius: 30px; -fx-border-color: black; -fx-border-radius: 30px;" text="Disconnect">
                                       <font>
                                          <Font name="System Bold" size="15.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <ScrollPane fx:id="scrollPane" prefHeight="500.0" prefWidth="675.0" style="-fx-background-color: #e8e8e8;" vbarPolicy="ALWAYS">
                    <content>
                        <VBox fx:id="chatDisplay" spacing="10.0" />
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="372.0" spacing="60.0" style="-fx-border-color: black; -fx-border-radius: 50px; -fx-border-width: 5px;">
                    <children>
                        <TextField fx:id="msgInput" prefHeight="45.0" prefWidth="342.0" promptText="Type your message here..." style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 30px; -fx-border-style: dashed; -fx-border-width: 3;">
                     <HBox.margin>
                        <Insets left="-30.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font></TextField>
                        <Button fx:id="sendBtn" onAction="#sendMsg" prefHeight="41.0" prefWidth="148.0" style="-fx-background-color: black; -fx-background-radius: 30px;" text="Send&gt;&gt;" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                        </Button>
                    </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
