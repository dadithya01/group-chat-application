<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="700.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.groupchat.controllers.ServerController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="772.0" prefWidth="673.0" spacing="55.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="84.0" prefWidth="673.0" spacing="10.0">
                    <children>
                        <VBox prefHeight="45.0" prefWidth="675.0" spacing="5.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="673.0" spacing="70.0">
                                    <children>
                                        <Label prefHeight="44.0" prefWidth="500.0" text="Group Chat Server">
                                            <font>
                                                <Font name="System Bold" size="35.0" />
                                            </font>
                                        </Label>
                                        <Button fx:id="stopServerBtn" onAction="#stopServer" prefHeight="24.0" prefWidth="146.0" style="-fx-background-color: black; -fx-background-radius: 30px;" text="Stop Server" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="15.0" />
                                 </font></Button>
                                    </children>
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                                </HBox>
                                <Label fx:id="clientCountLabel" text="Connected Clients: 0" textFill="#666666">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin></Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <ScrollPane fx:id="scrollPane" prefHeight="498.0" prefWidth="673.0" style="-fx-background-color: #e8e8e8;" vbarPolicy="ALWAYS">
                    <content>
                        <VBox fx:id="chatDisplay" spacing="10.0" />
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="372.0" spacing="60.0" style="-fx-border-color: black; -fx-border-width: 5px; -fx-border-radius: 50px;">
                    <children>
                        <TextField fx:id="msgInput" prefHeight="45.0" prefWidth="372.0" promptText="Type your message here..." style="-fx-border-color: black; -fx-border-radius: 30px; -fx-background-color: transparent; -fx-border-style: dashed; -fx-border-width: 3;">
                     <HBox.margin>
                        <Insets left="-30.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font></TextField>
                        <Button fx:id="sendBtn" onAction="#sendMsg" prefHeight="41.0" prefWidth="130.0" style="-fx-background-color: black; -fx-background-radius: 30px;" text="Send&gt;&gt;" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="-30.0" />
                     </HBox.margin>
                        </Button>
                    </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
